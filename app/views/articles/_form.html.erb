<% name ||= "Crear" %>
<h1><%= name %> Articulo</h1>
<%= form_for(@article) do |f|  %>
	<% @article.errors.full_messages.each do |message|  %>
		<div class="be-red white">
			* <%= message %>
		</div>
	<% end %>
	<div class="field">
		<%= f.text_field :title, placeholder: "Titulo", class: "form-control" %>
	</div>
	<div class="field">
		<%= f.text_area :body, placeholder: "Escribe aqui tu articulo", style: "height:250px", class: "form-control"  %>
	</div>
	<div class="field">
		<%= f.submit name, class:"btn be-red white" %>
	</div>
<% end %>