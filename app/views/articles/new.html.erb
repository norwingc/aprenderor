<div style="width:80%; margin:auto">
	<h1>Crear Articulo</h1>	
	<%= form_for(@article) do |f|  %>
		<div class="field">
			<%= f.text_field :title, placeholder: "Titulo", class: "form-control" %>
		</div>
		<div class="field">
			<%= f.text_area :body, placeholder: "Escribe aqui tu articulo", style: "height:250px", class: "form-control"  %>
		</div>
		<div class="field">
			<%= f.submit "Agregar", class:"btn be-red white" %>
		</div>
	<% end %>
</div>